<h2><%= l(:label_people_settings) %></h2>
<%= error_messages_for 'people_setting' %>

<% people_tabs = [
    {:name => 'general', :partial => 'general', :label => :label_general},
    {:name => 'acl', :partial => 'acl', :label => :label_people_acl_settings},
    {:name => 'departments', :partial => 'departments', :label => :label_department_plural}
  ]
%>
<% (people_tabs << {:name => 'people_notifications', :partial => 'notifications', :label => :label_notification_plural}) if RedminePeople.use_notifications? %>

<%  people_tabs.push({:name => 'hidden', :partial => 'hidden', :label => :label_people_hidden}) if params[:hidden] %>

<%= render_tabs people_tabs %>

<% html_title(l(:label_settings), l(:label_people)) -%>

<% content_for :header_tags do %>
  <%= stylesheet_link_tag :redmine_people, :plugin => 'redmine_people' %>
<% end %>
