<div class='person_card'>
  <%= link_to person_path(person_data), :id => "avatar" do %>
    <div class="user_data">
      <%= avatar(person_data, :size => "32") %>
      <div class="name">
        <h4 class="contacts_header">
          <%= "#{person_data.name} #{person_age(person_data.age)}" %>
        </h4>
        <span class="job_title"><%= person_data.job_title %></span>
      </div>
    </div>
  <% end %>
</div>
